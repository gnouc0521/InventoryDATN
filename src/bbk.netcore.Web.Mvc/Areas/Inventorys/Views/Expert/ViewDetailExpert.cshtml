@using Abp.Localization
@using bbk.netcore.mdl.OMS.Application.Experts.Dto

@model ExpertListDto
@section Header{

    <!-- should using in layouts -->
    <link href="~/css/datagrid/datatables/datatables.bundle.css" rel="stylesheet" asp-append-version="true" />
    <environment names="Development">
        <link href="~/libs/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" asp-append-version="true" />
        <!-- select 2 -->
    </environment>
    <environment names="Staging,Production">
        <link href="~/libs/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
    @section Scripts{
    <environment names="Development">
        <script src="~/js/datagrid/datatables/datatables.bundle.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/locales/bootstrap-datepicker.vi.min.js" charset="UTF-8" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/Oms/Experts/ViewDetail.js" charset="UTF-8" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/locales/bootstrap-datepicker.vi.min.js" charset="UTF-8" asp-append-version="true"></script>
        <script src="~/js/datagrid/datatables/datatables.bundle.js" asp-append-version="true"></script>
        <script src="/view-resources/Areas/PersonalProfile/_Bundles/documents.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/Oms/Experts/ViewDetail.js" charset="UTF-8" asp-append-version="true"></script>
    </environment>
}
    <div class="row">
        <ol class="breadcrumb breadcrumb-seperator-3">
            <li class="breadcrumb-item ">

                <a href="@Url.Action("Index", "Dashboard", "PersonalProfile")"> <i class="fal fa-home mr-1"></i>Trang chủ</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Expert", "PersonalProfile")">Chuyên viên</a>
            </li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
        <div class="col-xl-12 mb-4 mt-2">
            <div class="form-row align-items-center">
                <div class="">
                    <a class="btn btn-primary ml-auto text-white btn-back" href="@Url.Action("Index", "Expert", "PersonalProfile")">
                        <i class="fal fa-arrow-left"></i>
                    </a>
                </div>
                <div class="d-flex flex-column ml-3">
                    <h4 class="font-weight-bold">Chi tiết Chuyên viên</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-12">
            <input type="text" id="UserId" value="@Model.UserId" hidden />
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        <span class="fw-300"><i>
                            <i class="fal fa-info-circle" style="color: #f19a5b;"></i>
                            Thông tin chuyên viên <span class="font-weight-bold ml-1">@Model.Name</span></i>
                        </span>
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                        <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        @*<button class="btn btn-panel bg-transparent fs-xl w-auto h-auto rounded-0" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"><i class="fal fa-expand"></i></button>*@
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row mt-2">
                            <div class="col-12">
                               <p>
                                   <span class="font-weight-bold">Mã chuyên viên:</span>
                                   <span>@Model.ExpertCode</span>
                               </p>
                               <p>
                                   <span class="font-weight-bold">Họ và tên chuyên viên:</span>
                                   <span>@Model.Name</span>
                               </p>
                               <p>
                                   <span class="font-weight-bold">Địa chỉ chuyên viên:</span>
                                   <span>@Model.Address</span>
                               </p>
                               <p>
                                   <span class="font-weight-bold">Email:</span>
                                   <span>@Model.Email</span>
                               </p>
                               <p>
                                   <span class="font-weight-bold">Số điện thoại:</span>
                                   <span>@Model.PhoneNumber</span>
                               </p>
                            </div>
                            <div class="col-12">
                                @*<p class="font-weight-bold">Hàng hóa :</p>
                                <div class="row" id="listItem">
                                     
                                </div>*@
                                <table id="ExpertTable" class="table table-bordered table-hover table-striped w-100">
                                    <thead class="bg-primary-600">
                                        <tr>
                                            <th>Tên hàng hóa</th>
                                            <th>Nhà cung cấp</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
