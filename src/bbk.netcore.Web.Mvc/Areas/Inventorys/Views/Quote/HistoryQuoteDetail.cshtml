@using bbk.netcore.mdl.OMS.Application.Quotes.Dto;
@model QuoteListDto
@section Header{

    <!-- should using in layouts -->
    <link href="~/css/datagrid/datatables/datatables.bundle.css" rel="stylesheet" asp-append-version="true" />
    <environment names="Development">
        <link href="~/libs/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" asp-append-version="true" />
        <!-- select 2 -->
    </environment>
    <environment names="Staging,Production">
        <link href="~/libs/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}
@section Scripts{
    <environment names="Development">
        <script src="~/js/datagrid/datatables/datatables.bundle.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/locales/bootstrap-datepicker.vi.min.js" charset="UTF-8" asp-append-version="true"></script>
        <script src="/view-resources/Areas/Oms/Quote/HistoryQuoteDetail.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js" asp-append-version="true"></script>
        <script src="~/libs/bootstrap-datepicker/locales/bootstrap-datepicker.vi.min.js" charset="UTF-8" asp-append-version="true"></script>
        <script src="~/js/datagrid/datatables/datatables.bundle.js" asp-append-version="true"></script>
        <script src="/view-resources/Areas/Oms/Quote/HistoryQuoteDetail.js" asp-append-version="true"></script>

    </environment>
}
<div class="row">
    <ol class="breadcrumb breadcrumb-seperator-3">
        <li class="breadcrumb-item ">
            <a href="@Url.Action("Index", "Dashboard", "Inventorys")"> <i class="fal fa-home mr-1"></i>Trang chủ</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Compare", "Quote", "Inventorys")">Báo giá</a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("History", "Quote", "Inventorys")">Lịch sử báo giá</a>
        </li>
        <li class="breadcrumb-item">
            <a >Chi tiết lịch sử</a>
        </li>
    </ol>
    <div class="col-xl-12 mb-4 mt-2">
        <div class="form-row align-items-center">
            <div class="">
                <a class="btn btn-primary ml-auto text-white btn-back" href="@Url.Action("History", "Quote","Inventorys")">
                    <i class="fal fa-arrow-left"></i>
                </a>
            </div>
            <div class="d-flex flex-column ml-3">
                <h4 class="font-weight-bold add-Syn">Chi tiết lịch sử báo giá  @*@Model.PurchasesSynthesiseCode*@ </h4>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <span class="fw-300 add-Syn">    <i class="fal fa-info-circle" style="color: #f19a5b;"></i><i>Chi tiết lịch sử báo giá @*@Model.PurchasesSynthesiseCode *@ </i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="row d-flex">
                        <div class="col-12">
                            @*  <p class="mb-2"><span class="font-weight-bold">Người mua hàng: </span><span id="UserNameSyn">@Model.CreateName</span>   </p>
                            <p class="mb-2"><span class="font-weight-bold">Mã trình báo giá: </span><span id="UserNameSyn">@Model.Code</span>   </p>
                            <p class="mb-2"><span class="font-weight-bold">Ngày tổng hợp: </span><span id="DateSyn">@Model.CreationTime.ToShortDateString()</span> </p>*@
                        </div>
                        <div class="col-12">
                            <!-- datatable start -->
                            <input id="QuoteId" value="@ViewBag.SynthesiseId" hidden />
                            <table id="QuoteHisTable" class="table table-bordered table-hover table-striped w-100">
                                <thead class="bg-primary-600">
                                    <tr>
                                        <th>NGÀY BÁO GIÁ</th>
                                        <th>MÃ HÀNG HÓA - HÀNG HÓA </th>
                                        <th>NCC</th>
                                        <th>THÔNG SỐ KỸ THUẬT</th>
                                        <th>ĐVT</th>
                                        <th>ĐƠN GIÁ/ĐVT</th>
                                        <th>GHI CHÚ</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            <!-- datatable end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>