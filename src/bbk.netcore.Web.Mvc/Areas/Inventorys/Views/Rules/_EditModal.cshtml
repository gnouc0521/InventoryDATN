@using Abp.Localization
@using Abp.MultiTenancy
@using bbk.netcore.MultiTenancy
@using bbk.netcore.mdl.OMS.Application.Ruleses.Dto
@model RulesListDto


<div class="modal-content" id="RulesEditModal">
  <div class="modal-header">
    <h5 class="modal-title">Cập nhật quy cách </h5><button type="button" class="close" data-dismiss="modal"
                                                           aria-label="Close">
      <span aria-hidden="true"><i class="fal fa-times"></i></span>
    </button>
  </div>

  <div class="modal-body">
    <form name="FrmEdit" role="form" class="needs-validation" novalidate="">
      <input type="text" hidden value="@Model.Id" name="Id" id="Id" />
      <input type="text" hidden value="@Model.ItemKey" id="ValueItemKey" />
      <div class="form-group row required">
        <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Khóa"))<span class="text-danger">*</span></label>
        <div class="col-md-9">
          <select name="ItemKey" class="form-control" required>
            <option value="NGH"> Nghành hàng </option>
            <option value="NHH"> Nhóm hàng </option>
            <option value="LH"> Loại hàng </option>
          </select>
        </div>
      </div>
      <div class="form-group row required">
        <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Tên"))<span class="text-danger">*</span></label>
        <div class="col-md-9">
          <input type="text" name="ItemText" class="form-control" value="@Model.ItemText" required minlength="">
        </div>
      </div>
      <div class="form-group row required">
        <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Kí hiệu"))<span class="text-danger">*</span></label>
        <div class="col-md-9">
          <input type="number" name="ItemValue" class="form-control" value="@Model.ItemValue" maxlength="2">
        </div>
      </div>
      <div class="form-group row required">
        <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Ghi chú"))</label>
        <div class="col-md-9">
          <input type="text" name="Remark" class="form-control" value="@Model.Remark" minlength="">
        </div>
      </div>
    </form>
  </div>
</div>
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel_Custom.cshtml")


