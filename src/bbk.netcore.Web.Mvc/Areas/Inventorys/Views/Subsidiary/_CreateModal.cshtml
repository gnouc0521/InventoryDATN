@using Abp.MultiTenancy
@using bbk.netcore.MultiTenancy
@using bbk.netcore.mdl.PersonalProfile.Core
@using bbk.netcore.mdl.OMS.Application.Subsidiaries.Dto;
@model SubsidiaryCreateDto

@{
    Layout = null;
}
<div class="modal-content" id="ProducerCreateModal">
    <div class="modal-header">
        <h5 class="modal-title">Thêm mới Đơn vị yêu cầu </h5><button type="button" class="close" data-dismiss="modal"
                                                                   aria-label="Close">
            <span aria-hidden="true"><i class="fal fa-times"></i></span>
        </button>
    </div>
    <div class="modal-body">
        <form name="frmCreate" method="post" role="form" class="form-validation needs-validation" novalidate>
            <div class="row">
                <div class="form-group col-md-4 required">
                    <label>@(new FixedLocalizableString("Tên đơn vị"))<span class="text-danger">*</span></label>
                    <input type="text" name="NameCompany" class="form-control" required minlength="">
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Không được để trống trường này!"))
                    </div>
                </div>
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Số điện thoại"))<span class="text-danger">*</span></label>
                    <div class="d-flex">
                        <div class="input-group-prepend">
                            <span class="input-group-text">+84</span>
                        </div>
                        <input id="PhoneNumber" type="text" name="PhoneNumber" class="form-control" pattern=".{9,}" title="Ký tự nhập ít nhất là 9." maxlength="9" required />
                    </div>
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Sai định dạng!"))
                    </div>
                </div>
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Email"))<span class="text-danger">*</span></label>
                    <input type="email" name="EmailAddress" class="form-control" required minlength="">
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Email Sai định dạng!"))
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Địa chỉ"))<span class="text-danger">*</span></label>
                    <input type="text" name="Address" class="form-control" required minlength="">
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Không được để trống trường này!"))
                    </div>
                </div>
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Thành phố"))<span class="text-danger">*</span></label>
                    <select class="form-control" id="selectProvinceOfBirth" name="CityId" required>
                        <option value="" selected disabled class="title-address" style="font-size:12px;">Chọn Tỉnh/TP</option>
                        @foreach (var item in Model.provinces.Addresses)
                        {
                            <option value="@item.Id" data-select-id="@item.Name" data-id="@item.Id">@item.Name</option>
                        }
                    </select>
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Không được để trống trường này!"))
                    </div>
                </div>
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Quận/Huyện"))<span class="text-danger">*</span></label>
                    <select class="form-control" id="selectDistrictOfBirth" name="DistrictId" required>
                        <option value="" selected disabled>Chọn Quận/Huyện</option>
                    </select>
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Không được để trống trường này!"))
                    </div>
                </div>
                <div class="form-group col-md-4 required">
                    <label class="">@(new FixedLocalizableString("Phường/Xã"))<span class="text-danger">*</span></label>
                    <select class="form-control" id="selectVillageOfBirth" name="WardsId" required>
                        <option value="" selected disabled>Chọn xã/phường</option>
                    </select>
                    <div class="invalid-feedback">
                        @(new FixedLocalizableString("Không được để trống trường này!"))
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancelAndHuy.cshtml")
