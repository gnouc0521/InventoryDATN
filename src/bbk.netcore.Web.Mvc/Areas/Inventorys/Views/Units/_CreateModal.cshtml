@using bbk.netcore.mdl.OMS.Application.Units.Dto
@{
    Layout = null;
}
@model UnitListDto
<div class="modal-content" id="UnitsCreateModal">
    <div class="modal-header">
        <h5 class="modal-title">Thêm mới đơn vị tính </h5><button type="button" class="close" data-dismiss="modal"
                                                      aria-label="Close">
            <span aria-hidden="true"><i class="fal fa-times"></i></span>
        </button>
    </div>
    <div class="modal-body">
        <form name="frmCreate" role="form" class="form-validation needs-validation" novalidate="">
            <div class="form-group row required">
                @if(Model.ParrentId != 0){
                    <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Tên đơn vị tính")) @Model.Name <span class="text-danger">*</span></label>
                }else{
                    <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Tên đơn vị tính"))<span class="text-danger">*</span></label>
                }
                <div class="col-md-9">
                    <input type="text" name="Name" class="form-control" required minlength="">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Ghi chú"))</label>
                <div class="col-md-9">
                    <input type="text" name="Description" class="form-control" minlength="">
                </div>
            </div>
            @if(Model.Id !=0){
            <div class="form-group row required">
                    <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Chiều dài"))<span class="text-danger">*</span></label>
                <div class="col-md-9">
                        <input type="text" name="Length" class="form-control" required minlength="">
                </div>
            </div>
            <div class="form-group row required">
                    <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Chiều rộng"))<span class="text-danger">*</span></label>
                <div class="col-md-9">
                        <input type="text" name="Width" class="form-control" required minlength="">
                </div>
            </div>
            <div class="form-group row required">
                    <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Chiều cao"))<span class="text-danger">*</span></label>
                <div class="col-md-9">
                        <input type="text" name="Height" class="form-control" required minlength="">
                </div>
            </div>
            }
                <input hidden name="ParrentId" value="@Model.Id" />
        </form>
    </div>
</div>
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel_Custom.cshtml")


