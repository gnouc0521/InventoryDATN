@using Abp.Localization
@using Abp.MultiTenancy
@using bbk.netcore.MultiTenancy
@using bbk.netcore.mdl.OMS.Application.Units.Dto
@model UnitListDto


<div class="modal-content" id="UnitsEditModal">
    <div class="modal-header">
        <h5 class="modal-title">Cập nhật đơn vị tính </h5><button type="button" class="close" data-dismiss="modal"
                                                          aria-label="Close">
            <span aria-hidden="true"><i class="fal fa-times"></i></span>
        </button>
    </div>

    <div class="modal-body">
        <form name="FrmEdit" role="form" class="needs-validation" novalidate="">
            <input type="text" hidden value="@Model.Id" name="Id" id="Id" />
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Tên đơn vị tính"))<span class="text-danger">*</span></label>
                <div class="col-md-9">
                    <input type="text" name="Name" class="form-control" required value="@Model.Name" minlength="">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@(new FixedLocalizableString("Ghi chú"))</label>
                <div class="col-md-9">
                    <input type="text" name="Description" class="form-control" value="@Model.Description"  minlength="">
                </div>
            </div>
            <input hidden type="text" value="@Model.ParrentId" name="ParrentId" />
            
        </form>
    </div>
</div>
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel_Custom.cshtml")


