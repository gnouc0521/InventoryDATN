@using Abp.Localization
@using bbk.netcore.Web.Areas.Inventorys.Models.WarehouseCard;
@model IndexViewModel
@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/Oms/WarehouseCard/Index.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/Oms/ImportRequests/paging.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
    </environment>
}
<div class="row">
    <ol class="breadcrumb breadcrumb-seperator-3">
        <li class="breadcrumb-item ">

            <a href="@Url.Action("Index", "Dashboard", "PersonalProfile")"> <i class="fal fa-home mr-1"></i>Trang chủ</a>
        </li>
        <li class="breadcrumb-item active">Danh sách phiếu nhập kho</li>
    </ol>
    <div class="col-xl-12 mb-4 mt-2">
        <div class="form-row align-items-center">
            <div class="">
                <a class="btn btn-primary ml-auto text-white btn-back" href="@Url.Action("Index", "Dashboard", "PersonalProfile")">
                    <i class="fal fa-arrow-left"></i>
                </a>
            </div>
            <div class="d-flex flex-column ml-3 ">
                <h4 class="font-weight-bold ">Danh sách phiếu thẻ kho</h4>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="p-3 bg-white rounded mb-g shadow-2 d-flex align-items-end justify-content-between">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-lg-3 col-md-3 mb-3 ">
                        <input type="text" id="SearchTerm" name="SearchTerm" placeholder="Mã Phiếu" class="form-control" required>
                    </div>
                    <div class="col-lg-3 col-md-3 mb-3 ">
                        <input type="text" autocomplete="off" class="form-control date-picker" value="" placeholder="@(new FixedLocalizableString("Nhập ngày"))"
                               id="RequestDate" name="RequestDate">
                    </div>
                    <div class="col-lg-3 col-md-3 mb-3 ">
                        <select class="SubjectName-select form-control" id="WarehouseDestinationId" name="WarehouseDestinationId"  asp-items="@Model.GetWarehouse()" >
                            <option value="0" selected disabled>Kho tạo phiếu</option>
                        </select>
                    </div>
                    <div class="col-lg-3 col-md-3 mb-3">
                        <select class="SubjectName-select form-control" id="NameRequest" name="NameRequest" asp-items="ViewBag.Name">
                            <option value="0" selected disabled>Người tạo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row mb-3">
                    <div class="col-md-12 text-right">
                        <button type="button" id="Search" class="btn btn-primary "><i class="fal fa-search"></i>Tìm Kiếm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    <span class="fw-300"><i>Danh sách thẻ kho</i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="form-row">
                        <div class="col-lg-6 col-md-12 mb-3">
                            <button id="CreateNewButtonxx" name="CreateNewButton" class="btn btn-sm btn-toolbar-full btn-primary ml-auto">
                                <span class="fal fa-plus-square"></span>
                                @(new FixedLocalizableString("Thêm mới"))
                            </button>
                            <button id="DeleteAll" name="DeleteButton" class="btn btn-sm btn-toolbar-full btn-primary ml-auto" disabled>
                                <span class="fal fa-trash-alt"></span>
                                @(new FixedLocalizableString("Xóa"))
                            </button>
                        </div>
                    </div>
                    <!-- datatable start -->
                    <table id="ImportRequestTable" class="table table-bordered table-hover table-striped w-100">
                        <thead class="bg-primary-600">
                            <tr>
                                <th>STT</th>
                                <th>MÃ PHIẾU</th>
                                <th>NGƯỜI TẠO</th>
                                <th>NGÀY LẬP PHIẾU</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>